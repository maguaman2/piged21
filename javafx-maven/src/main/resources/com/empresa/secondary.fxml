               <children>
                  <Label text="id">
                     <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </GridPane.margin>
                  </Label>
                  <TextField fx:id="txtId" editable="false" prefHeight="25.0" prefWidth="336.0" GridPane.rowIndex="1">
